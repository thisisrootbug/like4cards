<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[hasclass('settings')]" position="inside">
				<div class="app_settings_block" data-string="Like for Cards" data-key="like4cards" >
					<h2>Like4Cards</h2>
					<div class="row mt16 o_settings_container" name="like4cards">
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_right_pane">
								<div class="col-12 col-lg-6 o_setting_box" id="like4cards_api_parameters">
									<div class="o_setting_left_pane">
										 <label for="like4cards_deviceid" /> 
										<field name="like4cards_deviceid" class="oe_inline" /> 
										 <label for="like4cards_email" /> 
										<field name="like4cards_email" class="oe_inline"  /> 
										 <label for="like4cards_password" /> 
										<field name="like4cards_password" password="1" class="oe_inline" /> 
										 <label for="like4cards_securitycode" class="oe_inline" /> 
										<field name="like4cards_securitycode" password="1" class="oe_inline" /> 
										 <label for="like4cards_phone" /> 
										<field name="like4cards_phone" class="oe_inline" /> 
										 <label for="like4cards_hash_key" class="oe_inline" /> 
										<field name="like4cards_hash_key" password="1" class="oe_inline" /> 
										 <label for="like4cards_secret_key" class="oe_inline" /> 
										<field name="like4cards_secret_key" password="1" class="oe_inline" /> 
										 <label for="like4cards_secret_iv" class="oe_inline" /> 
										<field name="like4cards_secret_iv" password="1" class="oe_inline"  /> 
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>

</odoo>
